<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingNewCategory"
    tools:context="com.fkulic.tasky.EditCategoriesActivity">

    <EditText
        android:id="@+id/etNewCategory"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="@color/yellow200"
        android:hint="@string/newCategory"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bAddNewCategory"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bAddNewCategory"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/yellow300"
        android:text="+"
        android:textColor="#666"
        android:textSize="28sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@+id/etNewCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etNewCategory"/>

    <ListView
        android:id="@+id/lvCategories"
        android:layout_width="0dp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAddNewCategory"/>

</android.support.constraint.ConstraintLayout>
