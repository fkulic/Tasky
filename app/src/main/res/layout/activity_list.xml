<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fkulic.tasky.ListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/taskItemSpacing"
        app:layout_constraintBottom_toTopOf="@+id/bEditCategories"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bEditCategories"
        android:layout_width="0dp"
        android:layout_height="@dimen/bHeight"
        android:background="@color/bBackgroundColor"
        android:text="@string/EditCategories"
        android:textAllCaps="true"
        android:textColor="@color/bTextColor"
        android:textSize="@dimen/bTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bNewTask"/>

    <Button
        android:id="@+id/bNewTask"
        android:layout_width="0dp"
        android:layout_height="@dimen/bHeight"
        android:background="@color/bBackgroundColor"
        android:text="@string/NewTask"
        android:textAllCaps="true"
        android:textColor="@color/bTextColor"
        android:textSize="@dimen/bTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bEditCategories"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>